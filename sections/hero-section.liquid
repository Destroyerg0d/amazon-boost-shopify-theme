{% comment %}
  Hero Section - Main landing section with animated content
{% endcomment %}

{%- liquid
  assign section_id = 'hero-section-' | append: section.id
  assign hero_title = section.settings.hero_title | default: 'Get Authentic Book Reviews from Our Million+ Reader Community'
  assign hero_subtitle = section.settings.hero_subtitle | default: 'Built through Facebook and Google advertising, our verified ARC community delivers honest, authentic reviews to help your book succeed on Amazon.'
  assign cta_text = section.settings.cta_text | default: 'Get Reviews Now'
  assign cta_url = section.settings.cta_url | default: '#'
  assign secondary_cta_text = section.settings.secondary_cta_text | default: 'View Our Community'
  assign secondary_cta_url = section.settings.secondary_cta_url | default: '#'
  assign badge_text = section.settings.badge_text | default: '1M+ Active ARC Readers Community'
  assign stats_text = section.settings.stats_text | default: '10,000+ Books Reviewed'
  assign community_count = section.settings.community_count | default: '1M+'
  assign community_label = section.settings.community_label | default: 'Active ARC Readers'
-%}

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    overflow: hidden;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-background::before {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    opacity: 0.95;
  }

  .floating-book {
    position: absolute;
    opacity: 0.1;
    animation: float 6s ease-in-out infinite;
  }

  .floating-book:nth-child(1) { left: 10%; top: 20%; animation-delay: 0s; }
  .floating-book:nth-child(2) { left: 25%; top: 50%; animation-delay: 0.5s; }
  .floating-book:nth-child(3) { left: 40%; top: 30%; animation-delay: 1s; }
  .floating-book:nth-child(4) { left: 55%; top: 60%; animation-delay: 1.5s; }
  .floating-book:nth-child(5) { left: 70%; top: 40%; animation-delay: 2s; }
  .floating-book:nth-child(6) { left: 85%; top: 70%; animation-delay: 2.5s; }

  @keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
  }

  .hero-content {
    position: relative;
    z-index: 10;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    text-align: center;
    color: white;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 9999px;
    padding: 0.5rem 1rem;
    margin-bottom: 1.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    animation: fadeIn 0.6s ease-out;
  }

  .hero-badge svg {
    width: 1rem;
    height: 1rem;
    color: #fbbf24;
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    animation: fadeIn 0.6s ease-out 0.3s both;
  }

  .hero-title .highlight {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    opacity: 0.9;
    margin-bottom: 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
    animation: fadeIn 0.6s ease-out 0.6s both;
  }

  .hero-cta {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    margin-bottom: 3rem;
    animation: fadeIn 0.6s ease-out 0.9s both;
  }

  .hero-cta .btn-primary {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    color: white;
    border: none;
    border-radius: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: all 0.3s ease;
  }

  .hero-cta .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(251, 191, 36, 0.3);
  }

  .hero-cta .btn-secondary {
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    color: white;
    border-radius: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .hero-cta .btn-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
  }

  .hero-stats {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    color: rgba(255, 255, 255, 0.8);
    animation: fadeIn 0.6s ease-out 1.2s both;
  }

  .hero-stats .rating {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .hero-stats .stars {
    display: flex;
  }

  .hero-stats .star {
    width: 1.25rem;
    height: 1.25rem;
    fill: #fbbf24;
    color: #fbbf24;
  }

  .hero-stats .community-count {
    font-size: 1.5rem;
    font-weight: 700;
  }

  .hero-stats .community-label {
    font-size: 1rem;
    font-weight: 400;
    opacity: 0.8;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3rem;
    }
    
    .hero-cta {
      flex-direction: row;
    }
    
    .hero-stats {
      flex-direction: row;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }
</style>

