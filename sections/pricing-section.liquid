{% comment %}
  Pricing Section - Shows different pricing tiers
{% endcomment %}

{%- liquid
  assign section_id = 'pricing-section-' | append: section.id
  assign section_title = section.settings.section_title | default: 'Choose Your Review Package'
  assign section_subtitle = section.settings.section_subtitle | default: 'Select the perfect package for your book\'s success'
  
  assign starter_price = section.settings.starter_price | default: '$299'
  assign starter_title = section.settings.starter_title | default: 'Starter'
  assign starter_reviews = section.settings.starter_reviews | default: '25 Reviews'
  assign starter_features = section.settings.starter_features | default: 'Basic reader matching,Standard turnaround,Email support'
  
  assign professional_price = section.settings.professional_price | default: '$599'
  assign professional_title = section.settings.professional_title | default: 'Professional'
  assign professional_reviews = section.settings.professional_reviews | default: '50 Reviews'
  assign professional_features = section.settings.professional_features | default: 'Advanced reader matching,Priority turnaround,Phone support,Review monitoring'
  
  assign premium_price = section.settings.premium_price | default: '$999'
  assign premium_title = section.settings.premium_title | default: 'Premium'
  assign premium_reviews = section.settings.premium_reviews | default: '100 Reviews'
  assign premium_features = section.settings.premium_features | default: 'Premium reader matching,Express turnaround,Dedicated manager,Review monitoring,Performance analytics'
-%}

<style>
  .pricing-section {
    padding: 5rem 0;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
  }

  .pricing-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .pricing-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .pricing-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 1rem;
  }

  .pricing-subtitle {
    font-size: 1.125rem;
    color: #64748b;
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .pricing-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .pricing-card {
    background: white;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    transition: all 0.3s ease;
    border: 2px solid transparent;
    position: relative;
  }

  .pricing-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .pricing-card.featured {
    border-color: #667eea;
    transform: scale(1.05);
  }

  .pricing-card.featured::before {
    content: 'Most Popular';
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 600;
  }

  .pricing-card-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .pricing-card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #1e293b;
    margin-bottom: 0.5rem;
  }

  .pricing-card-price {
    font-size: 3rem;
    font-weight: 700;
    color: #667eea;
    margin-bottom: 0.5rem;
  }

  .pricing-card-reviews {
    font-size: 1.125rem;
    color: #64748b;
    font-weight: 500;
  }

  .pricing-card-features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
  }

  .pricing-card-features li {
    padding: 0.75rem 0;
    border-bottom: 1px solid #e2e8f0;
    color: #64748b;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .pricing-card-features li:last-child {
    border-bottom: none;
  }

  .pricing-card-features li svg {
    width: 1.25rem;
    height: 1.25rem;
    color: #10b981;
    flex-shrink: 0;
  }

  .pricing-card-cta {
    width: 100%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    border-radius: 0.5rem;
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    text-align: center;
    transition: all 0.3s ease;
  }

  .pricing-card-cta:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
  }

  .pricing-card.featured .pricing-card-cta {
    background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
  }

  .pricing-card.featured .pricing-card-cta:hover {
    box-shadow: 0 10px 25px rgba(251, 191, 36, 0.3);
  }

  .pricing-note {
    text-align: center;
    color: #64748b;
    font-size: 0.875rem;
    margin-top: 2rem;
  }

  @media (min-width: 768px) {
    .pricing-title {
      font-size: 3rem;
    }
    
    .pricing-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
</style>

<section class="pricing-section" id="{{ section_id }}">
  <div class="pricing-container">
    <div class="pricing-header">
      <h2 class="pricing-title">{{ section_title }}</h2>
      <p class="pricing-subtitle">{{ section_subtitle }}</p>
    </div>

    <div class="pricing-grid">
      <div class="pricing-card">
        <div class="pricing-card-header">
          <h3 class="pricing-card-title">{{ starter_title }}</h3>
          <div class="pricing-card-price">{{ starter_price }}</div>
          <div class="pricing-card-reviews">{{ starter_reviews }}</div>
        </div>
        <ul class="pricing-card-features">
          {% assign features = starter_features | split: ',' %}
          {% for feature in features %}
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20,6 9,17 4,12"/>
              </svg>
              {{ feature | strip }}
            </li>
          {% endfor %}
        </ul>
        <a href="#contact" class="pricing-card-cta">Get Started</a>
      </div>

      <div class="pricing-card featured">
        <div class="pricing-card-header">
          <h3 class="pricing-card-title">{{ professional_title }}</h3>
          <div class="pricing-card-price">{{ professional_price }}</div>
          <div class="pricing-card-reviews">{{ professional_reviews }}</div>
        </div>
        <ul class="pricing-card-features">
          {% assign features = professional_features | split: ',' %}
          {% for feature in features %}
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20,6 9,17 4,12"/>
              </svg>
              {{ feature | strip }}
            </li>
          {% endfor %}
        </ul>
        <a href="#contact" class="pricing-card-cta">Get Started</a>
      </div>

      <div class="pricing-card">
        <div class="pricing-card-header">
          <h3 class="pricing-card-title">{{ premium_title }}</h3>
          <div class="pricing-card-price">{{ premium_price }}</div>
          <div class="pricing-card-reviews">{{ premium_reviews }}</div>
        </div>
        <ul class="pricing-card-features">
          {% assign features = premium_features | split: ',' %}
          {% for feature in features %}
            <li>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <polyline points="20,6 9,17 4,12"/>
              </svg>
              {{ feature | strip }}
            </li>
          {% endfor %}
        </ul>
        <a href="#contact" class="pricing-card-cta">Get Started</a>
      </div>
    </div>

    <div class="pricing-note">
      <p>All packages include authentic reviews from verified readers. Custom packages available for larger campaigns.</p>
    </div>
  </div>
</section>

